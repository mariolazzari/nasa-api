{
  "version": "0.1.4",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "pub": "npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@mariolazzari/nasa-api",
  "description": "NASA public REST API client",
  "author": "Mario Lazzari",
  "module": "dist/nasa-api.esm.js",
  "size-limit": [
    {
      "path": "dist/nasa-api.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nasa-api.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^12.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "size-limit": "^12.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "nasa",
    "nasa-api",
    "earth",
    "moon",
    "mars",
    "space",
    "weather",
    "node",
    "typescript",
    "rest",
    "api"
  ]
}
